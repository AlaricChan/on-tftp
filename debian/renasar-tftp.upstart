description "run the renasar tftp service"

env config=/etc/default/renasar-tftp

start on (started rabbitmq-server and started mongodb)
stop on runlevel [!2345]
respawn

pre-start script
[ -e "$config" ] || { echo "${config} missing, not starting"; stop; exit 0; }
end script

script
    echo Starting renasar tftp service
    chdir /var/renasar/renasar-tftp
    exec /usr/bin/nodejs /var/renasar/renasar-tftp/index.js
end script
